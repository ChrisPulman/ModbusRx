<ui:FluentWindow
    x:Class="ModbusRx.Server.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModbusRx.Server.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui"
    xmlns:vm="clr-namespace:ModbusRx.Server.UI.Visualization"
    Title="ModbusRx Server"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance vm:ModbusServerViewModel}"
    mc:Ignorable="d">

    <ui:FluentWindow.InputBindings>
        <KeyBinding
            Key="F4"
            Command="{Binding ExitApplicationCommand}"
            Modifiers="Alt" />
    </ui:FluentWindow.InputBindings>

    <ui:FluentWindow.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
        </Style>
        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Margin" Value="3" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="32" />
        </Style>
        <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
            <Setter Property="Margin" Value="3" />
            <Setter Property="Height" Value="32" />
        </Style>
        <Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox">
            <Setter Property="Margin" Value="3" />
            <Setter Property="Height" Value="32" />
        </Style>
        <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox">
            <Setter Property="Margin" Value="3" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!--  Converters  -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <ToolBar Grid.Row="0">
            <Button Command="{Binding StartServerCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5,0,0,0" Text="▶ Start Server" />
                </StackPanel>
            </Button>
            <Button Command="{Binding StopServerCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5,0,0,0" Text="⏹ Stop Server" />
                </StackPanel>
            </Button>
            <Separator />
            <CheckBox Content="Simulation Mode" IsChecked="{Binding SimulationMode}" />
            <Separator />
            <Button Command="{Binding SaveConfigurationCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5,0,0,0" Text="💾 Save Config" />
                </StackPanel>
            </Button>
            <Button Command="{Binding LoadConfigurationCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5,0,0,0" Text="📁 Load Config" />
                </StackPanel>
            </Button>
            <Separator />
            <Button
                Background="LightCoral"
                Command="{Binding ExitApplicationCommand}"
                ToolTip="Exit the application (Alt+F4)">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5,0,0,0"
                        FontWeight="Bold"
                        Text="🚪 Exit" />
                </StackPanel>
            </Button>
        </ToolBar>

        <!--  Main Content  -->
        <TabControl Grid.Row="1" Margin="5">

            <!--  Server Status Tab  -->
            <TabItem Header="Server Status">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Server Information  -->
                    <GroupBox Grid.Column="0" Header="Server Information">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="Server Status:" />
                            <TextBlock Margin="10,0,0,5" Text="{Binding IsServerRunning, StringFormat='Running: {0}'}" />

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="TCP Port:" />
                            <TextBox Text="{Binding ServerConfiguration.TcpPort}">
                                <TextBox.IsEnabled>
                                    <Binding Path="IsServerRunning">
                                        <Binding.Converter>
                                            <BooleanToVisibilityConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBox.IsEnabled>
                            </TextBox>

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="UDP Port:" />
                            <TextBox Text="{Binding ServerConfiguration.UdpPort}">
                                <TextBox.IsEnabled>
                                    <Binding Path="IsServerRunning">
                                        <Binding.Converter>
                                            <BooleanToVisibilityConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBox.IsEnabled>
                            </TextBox>

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="Unit ID:" />
                            <TextBox Text="{Binding ServerConfiguration.UnitId}">
                                <TextBox.IsEnabled>
                                    <Binding Path="IsServerRunning">
                                        <Binding.Converter>
                                            <BooleanToVisibilityConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBox.IsEnabled>
                            </TextBox>
                        </StackPanel>
                    </GroupBox>

                    <!--  Simulation Controls  -->
                    <GroupBox Grid.Column="1" Header="Simulation Controls">
                        <StackPanel>
                            <CheckBox Content="Enable Simulation" IsChecked="{Binding SimulationMode}" />

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="Test Pattern:" />
                            <ComboBox ItemsSource="{Binding TestPatterns}" SelectedItem="{Binding SelectedTestPattern}" />

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="Simulation Type:" />
                            <ComboBox ItemsSource="{Binding SimulationTypes}" SelectedItem="{Binding SelectedSimulationType}" />

                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Button Command="{Binding LoadTestPatternCommand}" Content="Load Pattern" />
                                <Button Command="{Binding ClearDataCommand}" Content="Clear Data" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!--  Data View Tab  -->
            <TabItem Header="Data View">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Holding Registers  -->
                    <GroupBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Header="Holding Registers">
                        <DataGrid
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            ItemsSource="{Binding HoldingRegisters}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Address}"
                                    Header="Address"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Value}"
                                    Header="Value" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding HexValue}"
                                    Header="Hex"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!--  Input Registers  -->
                    <GroupBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Header="Input Registers">
                        <DataGrid
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding InputRegisters}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Address}"
                                    Header="Address" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Value}"
                                    Header="Value" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding HexValue}"
                                    Header="Hex" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!--  Coils  -->
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Header="Coils">
                        <DataGrid
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            ItemsSource="{Binding Coils}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Address}"
                                    Header="Address"
                                    IsReadOnly="True" />
                                <DataGridCheckBoxColumn
                                    Width="80"
                                    Binding="{Binding Value}"
                                    Header="Value" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding DisplayValue}"
                                    Header="Display"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!--  Discrete Inputs  -->
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Header="Discrete Inputs">
                        <DataGrid
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding Inputs}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Address}"
                                    Header="Address" />
                                <DataGridCheckBoxColumn
                                    Width="80"
                                    Binding="{Binding Value}"
                                    Header="Value" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding DisplayValue}"
                                    Header="Display" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!--  Client Configuration Tab  -->
            <TabItem Header="Client Configuration">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <!--  Client List  -->
                    <GroupBox Grid.Column="0" Header="Configured Clients">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <DataGrid
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                ItemsSource="{Binding ClientConfigurations}"
                                SelectedItem="{Binding SelectedClientConfiguration}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="150"
                                        Binding="{Binding Name}"
                                        Header="Name" />
                                    <DataGridTextColumn
                                        Width="80"
                                        Binding="{Binding ConnectionType}"
                                        Header="Type" />
                                    <DataGridTextColumn
                                        Width="120"
                                        Binding="{Binding Address}"
                                        Header="Address" />
                                    <DataGridTextColumn
                                        Width="80"
                                        Binding="{Binding Port}"
                                        Header="Port" />
                                    <DataGridTextColumn
                                        Width="80"
                                        Binding="{Binding SlaveId}"
                                        Header="Slave ID" />
                                    <DataGridCheckBoxColumn
                                        Width="80"
                                        Binding="{Binding IsEnabled}"
                                        Header="Enabled" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button
                                Grid.Row="1"
                                HorizontalAlignment="Right"
                                Command="{Binding RemoveClientCommand}"
                                Content="Remove Selected" />
                        </Grid>
                    </GroupBox>

                    <!--  Add New Client  -->
                    <GroupBox Grid.Column="1" Header="Add New Client">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="Name:" />
                            <TextBox Text="{Binding NewClientName}" />

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="Connection Type:" />
                            <ComboBox ItemsSource="{Binding ConnectionTypes}" SelectedItem="{Binding NewClientConnectionType}" />

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="Address:" />
                            <TextBox Text="{Binding NewClientAddress}" />

                            <TextBlock
                                Margin="0,10,0,0"
                                FontWeight="Bold"
                                Text="Port:" />
                            <TextBox Text="{Binding NewClientPort}" />

                            <Button
                                Margin="0,20,0,0"
                                Command="{Binding AddClientCommand}"
                                Content="Add Client" />
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        Foreground="{Binding IsServerRunning, Converter={StaticResource BoolToVisibilityConverter}}"
                        Text="●" />
                    <TextBlock Text="{Binding IsServerRunning, StringFormat='Server: {0}'}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</ui:FluentWindow>
